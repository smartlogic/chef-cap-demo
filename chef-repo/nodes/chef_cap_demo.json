{
  "build_essential" : {
    "compiletime" : true
  },
  "openssh" : {
    "permit_root_login" : "no",
    "password_authentication": "no"
  },
  "authorization" : {
    "sudo" : {
      "groups" : [
        "admin",
        "sudo"
      ],
      "passwordless" : true
    }
  },
  "postgresql" : {
    "password" : {
      "postgres" : "password"
    }
  },
  "monit": {
    "poll_period" : 30,
    "poll_start_delay" : 60
  },
  "run_list": [
    "recipe[build-essential]",
    "recipe[annoyances]",
    "recipe[openssl]",
    "recipe[openssh]",
    "recipe[sudo]",
    "recipe[postgresql::server]",
    "recipe[users_solo::admins]",
    "recipe[nginx]",
    "recipe[monit]"
  ]
}
